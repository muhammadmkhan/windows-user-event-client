<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.clientapp.controller.MainScreenController"
            style="-fx-background-color: #1e1e1e;">

    <!-- Header Bar -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #252526; -fx-padding: 10 20 10 20;">
            <Label text="ðŸŽ® FunFactor Game Launcher"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="userLabel" text="Welcome, Guest" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="logoutButton"
                    text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8;"/>        </HBox>
    </top>

    <!-- Game Area -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <GridPane fx:id="gameGrid" hgap="20" vgap="20" alignment="CENTER" style="-fx-padding: 20;" />
        </ScrollPane>
    </center>

</BorderPane>
